# Docker Compose Environment Variables

# Database Configuration
DB_NAME=unified_ops_platform
DB_USER=unified_ops_user
DB_PASSWORD=CHANGE_THIS_TO_SECURE_PASSWORD

# JWT Configuration (generate with: openssl rand -base64 32)
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_STRING
JWT_REFRESH_SECRET=CHANGE_THIS_TO_ANOTHER_RANDOM_32_CHAR_STRING

# Session Secret
SESSION_SECRET=CHANGE_THIS_TO_RANDOM_SESSION_SECRET

# Allowed Origins (your custom domains)
ALLOWED_ORIGINS=https://sitepandaseo.com,https://ducrm.com,https://my.logicinbound.com

# API URL (for frontend to connect to backend)
API_URL=http://backend:3001

# Optional: Webhook base URL
WEBHOOK_BASE_URL=https://sitepandaseo.com

